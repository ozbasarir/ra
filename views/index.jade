          li
            a(href='#highlights') Highlights
          |             
          li
            a(href='#description') Description
          |             
          li
            a(href='#owner') Owner
          |             
          li
            a(href='#location') Location
          |             
          li#last-link
            a(href='#reviews') Reviews

doctype html
html(lang='en')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible',content='IE=edge,chrome=1')
    meta(name='viewport',content='width=device-width, initial-scale=1.0')

    title Alamo Square Victorian
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file:// 
    //[if lt IE 9]
      script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
      script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    //[endif]
    script.
      (function() {
        window.apiToken = '#{apiToken}';
      })();      
  body(data-spy='scroll', data-target='#navbar-ar')
    block content
    // Modal used throughout the site. Triggered by #siteModal buttons. Behaviour defined in ra.js.
    .modal.fade#siteModal(role='dialog', aria-hidden='true')
      .modal-dialog(style='width: 100%')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
    // jQuery (necessary for Bootstrap's JavaScript plugins) 
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
    script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
    script(src="/javascripts/ra.js")
